<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="189dp">

        <Spinner
            android:id="@+id/pilihnegara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/contryyy"
            android:layout_marginTop="10dp"
            android:entries="@array/spinnerCountry"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/contryyy"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/rb_19ajadl"
            android:background="#E61905"
            android:text="Country"
            android:textAlignment="center"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/rb_19ajadl"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_18ajadl"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="18th and above" />

        <RadioButton
            android:id="@+id/rb_18ajadl"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_13dl"
            android:layout_marginTop="10dp"
            android:text="13th until 18th" />

        <TextView
            android:id="@+id/ageee"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/cb_batminton"
            android:background="#E61905"
            android:text="Age"
            android:textAlignment="center"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/cb_batminton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_takraw"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="108dp"
            android:text="Batminton" />

        <CheckBox
            android:id="@+id/cb_takraw"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_volly"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="108dp"
            android:text="Takraw" />

        <CheckBox
            android:id="@+id/cb_volly"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/hoby"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="108dp"
            android:text="vollyball" />

        <CheckBox
            android:id="@+id/cb_renang"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_sepakbola"
            android:layout_marginTop="10dp"
            android:text="Renang" />

        <CheckBox
            android:id="@+id/cb_sepakbola"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_basket"
            android:layout_marginTop="10dp"
            android:text="Sepakbola" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name..." />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email...." />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Password...." />

        <TextView
            android:id="@+id/hoby"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/password"
            android:background="#E61905"
            android:text="Hoby"
            android:textAlignment="center"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/cb_basket"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/hoby"
            android:layout_marginTop="10dp"
            android:text="Basket" />

        <RadioButton
            android:id="@+id/rb_13dl"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ageee"
            android:layout_marginTop="10dp"
            android:text="Under 13th" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pilihnegara"
            android:layout_marginTop="10dp"
            android:hint="Select Date" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggal"
            android:layout_marginTop="9dp"
            android:text="LOG IN" />
    </RelativeLayout>
</ScrollView>